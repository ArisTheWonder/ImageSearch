<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.aristhewonder.imagesearch.data.ui.gallery.GalleryFragment"
        android:label="GalleryFragment" >
        <action
            android:id="@+id/action_galleryFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.aristhewonder.imagesearch.data.ui.gallery.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="photo"
            app:argType="com.aristhewonder.imagesearch.data.dto.Photo" />
    </fragment>
</navigation>